menu "Toolchain and flags selection"

config TOOLCHAIN
	package
	default y

choice
	prompt "Architecture"

config ARCH_ARM
	bool "arm"

config ARCH_BLACKFIN
	bool "blackfin"

config ARCH_NIOS2
	bool "nios2"

config ARCH_POWERPC_32
	bool "powerpc 32 bits"

config ARCH_POWERPC_64
	bool "powerpc 64 bits"

config ARCH_X86_32
	bool "x86 32 bits"

config ARCH_X86_64
	bool "x86 64 bits"
endchoice

config ARCH
	string
	default "arm" if ARCH_ARM
	default "blackfin" if ARCH_BLACKFIN
	default "nios2" if ARCH_NIOS2
	default "ppc" if ARCH_POWERPC_32
	default "ppc64" if ARCH_POWERPC_64
	default "i686" if ARCH_X86_32
	default "x86_64" if ARCH_X86_64

config CONFIGURE_HOST
	string "Configure host string"
	default "$(ARCH)-linux"
	help
	  String passed to the --host argument of configure scripts

config CC
	string "Cross-compiler"
	default "$(ARCH)-linux-gcc"

config ARCH_FLAGS
	string
	default "-march=armv4t -msoft-float" if ARM_ARCH = 4
	default "-march=armv5t -msoft-float" if ARM_ARCH = 5 && !ARM_VFP
	default "-march=armv5t -mfpu=vfp -mfloat-abi=softfp" if ARM_ARCH = 5 && ARM_VFP
	default "-march=armv6 -msoft-float" if ARM_ARCH = 6 && !ARM_VFP
	default "-march=armv6 -mfpu=vfp -mfloat-abi=softfp" if ARM_ARCH = 6 && ARM_VFP
	default "-march=armv7-a -msoft-float" if ARM_ARCH = 7 && !ARM_VFP
	default "-march=armv7-a -mfpu=vfp3 -mfloat-abi=softfp" if ARM_ARCH = 7 && ARM_VFP
	default "-m32" if ARCH_X86_32

config CFLAGS
	string "Compilation flags"
	default "$(ARCH_FLAGS) -g -O2"

config LDFLAGS
	string "Link flags"
	default "$(ARCH_FLAGS) -g -O2"

if ARCH_ARM

config ARM_ARCH
	int "ARM architecture"
	range 4 7
	default 5

config ARM_VFP
	bool "VFP floating points"
	default y if ARM_ARCH = 6 || ARM_ARCH = 7

endif

choice
	prompt "Toolchain sysroot"
	default SYSROOT_AUTO

config SYSROOT_AUTO
       bool "Automatic"
       help
	 Try and guess toolchain sysroot automatically. If you get an
       	 error at the configuration check step, choose SYSROOT_MANUAL,
	 and set SYSROOT to where the toolchain sysroot is.

config SYSROOT_MANUAL
       bool "Manual"

endchoice

if SYSROOT_MANUAL

config SYSROOT
       string "sysroot location"

endif

menu "Toolchain libraries selection"

config LIBM
       bool "Install libm"
       default y

config LIBRESOLV
       bool "Install name resolution libraries"
       default y

config LIBDL
       bool "Install libdl"
       default y

config LIBPTHREAD
       bool "Install libpthread"
       default y

config LIBSTDCPP
       bool "Install libstdc++"
       default n

endmenu

endmenu
